<Window x:Class="Task_CancellationToken.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_CancellationToken"
        mc:Ignorable="d"
        Title="Tasks - CancellationTokenSource" Height="450" Width="800">
    <StackPanel>
        <Button x:Name="startBtn" Margin="40" Width="150" Height="70" Click="Start_btn">Starte den Progess-Bar</Button>

        <ProgressBar x:Name="progessBar" Height="20" Width="400"></ProgressBar>

        <Label x:Name="progessLbl" Margin="10" FontSize="34" Height="60" FontWeight="Bold" HorizontalContentAlignment="Center"></Label>

        <Button x:Name="cancelBtn" Margin="10" Width="150" Height="25" Click="Cancel_btn">Abbrechen</Button>
    </StackPanel>
</Window>
